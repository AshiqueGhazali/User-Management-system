<%-include('header') -%>
<link rel="stylesheet" href="/style.css">



<section class="text-center">
  
    <div class="p-5 bg-image"></div>
    
  
    <div class="card mx-4 mx-md-5 shadow-5-strong login_box">
      <div class="card-body py-5 px-md-5">
  
        <div class="row d-flex justify-content-center">
          <div class="col-lg-8">
            <h2 class="fw-bold mb-5">Sign up now</h2>
        
            <form action="" id="myForm" onsubmit="checkPassword(event)" method="post">
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="form3Example1" class="form_input" name="fname" required />
                    <label class="form_label" for="form3Example1">First name</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="form3Example2" class="form_input" name="sname" />
                    <label class="form_label" for="form3Example2">Last name</label>
                  </div>
                </div>
              </div>
   
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="email" id="emailAddress" class="form_input" name="email" required />
                    <label class="form_label" for="emailAddress">Email address</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="form3Example2" class="form_input" name="username" required />
                    <label class="form_label" for="form3Example2">Username</label>
                  </div>
                </div>
              </div>
  
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="password" id="password" class="form_input" name="password" required />
                    <label class="form_label" for="password">Password</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="password" id="cnfrm-password" class="form_input " required />
                    <label class="form_label" for="cnfrm-password">Confirm Password</label>
                  </div>
                </div>
              </div>
              <p id="message" style="color: #ffff;"></p>
              <% if(typeof message !== "undefined"){
                %>
                <p style="color: red;"><%=message%></p> 
                <%
              }
              %>
             
              <button type="submit"  class="btn btn-dark btn-block mb-4">Create account</button>
  
              <div class="text-center">
                <p>or sign up with:</p>
                <button type="button" class="btn  btn-floating mx-1">
                  <a href="#"><i class="fa-brands fa-google"></i></a>
                </button>
  
                <button type="button" class="btn  btn-floating mx-1">
                  <a href=""><i class="fa-brands fa-facebook"></i></a>
                </button>
  
                <button type="button" class="btn btn-floating mx-1">
                  <a href="#"><i class="fab fa-twitter"></i></a>
                </button>
  
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>



<script src="/validation.js"></script>

<%-include('footer') -%>