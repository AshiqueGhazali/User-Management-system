<%- include('../user/header') %>


<link rel="stylesheet" href="/style.css">



<section class="text-center">
  
    <div class="p-5 bg-image"></div>
    
  
    <div class="card mx-4 mx-md-5 shadow-5-strong login_box">
      <div class="card-body py-5 px-md-5">
  
        <div class="row d-flex justify-content-center">
          <div class="col-lg-8">
            <h2 class="fw-bold mb-5">Edit User</h2>
        
            <form action="" method="post">
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="form3Example1" class="form_input" name="fname" value="<%= user.fname %>"  required />
                    <label class="form_label" for="form3Example1">First name</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="form3Example2" class="form_input" name="sname" value="<%= user.sname %>" />
                    <label class="form_label" for="form3Example2">Last name</label>
                  </div>
                </div>
              </div>
   
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="email" id="form3Example1" class="form_input" name="email" value="<%= user.email %>"  required />
                    <label class="form_label" for="form3Example1">Email address</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="form3Example2" class="form_input" name="username" value="<%= user.username %>" required  />
                    <label class="form_label" for="form3Example2">Username</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                  </div>
                </div>
              </div>
             
              <button type="submit" class="btn btn-dark btn-block mb-4">Update Profile</button>
            </form>
            <a href="/admin/dashboard"><button  class="btn btn-primary btn-block mb-4">Back</button></a>
          </div>
        </div>
      </div>
    </div>
  </section>


<%- include('../user/footer') %>
